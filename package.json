    "@zemd/tsconfig": "^1.3.0",
    "eslint": "^9.21.0",
    "happy-dom": "^20.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.7.3",
    "vitest": "^4.0.4"
